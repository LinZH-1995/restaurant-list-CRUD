<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">

        {{#each restaurants}}
        <div>
          <div class="card mb-3">
            <a href="/restaurants/{{this.id}}/detail" class="text-secondary text-decoration-none">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-2">{{this.name}}</h6>

                <div class="restaurant-category mb-2">
                  <i class="fas fa-utensils me-1"></i> {{this.category}}
                </div>

                <span class="badge badge-pill text-bg-danger font-weight-normal mb-3">
                  {{this.rating}}
                  <i class="fas fa-star"></i>
                </span>
              </div>
            </a>

            <div class="card-footer text-muted bg-transparent d-flex justify-content-end mb-0">
              <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                <a href="/restaurants/{{this.id}}/edit" class="text-decoration-none" style="margin-right: 2.5rem;">
                  <i class="fas fa-edit text-primary"></i>
                </a>
                <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#deleteModal{{this.id}}">
                  <i class="fas fa-trash-alt text-danger"></i>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="deleteModal{{this.id}}" tabindex="-1" aria-labelledby="deleteModalLabel"
          aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body text-center px-3 py-5 fs-4 fw-bold">
                Confirm whether to delete 『{{this.name}}』 ?
              </div>
              <div class="modal-footer">
                <small>make sure you want to delete ! this can't be undo !</small>
                <form action="/restaurants/{{this.id}}/delete" method="POST">
                  <button type="submit" name="deletebtn" value="yes" class="btn btn-primary ms-5">Yes</button>
                </form>
                <button type="button" name="deletebtn" value="no" class="btn btn-secondary"
                  data-bs-dismiss="modal">No</button>
              </div>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>