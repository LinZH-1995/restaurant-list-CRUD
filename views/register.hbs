<div class="row mt-5 mb-5">
  <div class="col-md-3 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3 mb-4">Register</h1>
      {{> message}}
      <p>必填欄位*</p>
      <form id="form" action="/users/register" method="POST" novalidate>
        <div class="form-group mb-4">
          <label for="name" class="mb-1">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{ name }}">
        </div>
        <div class="form-group mb-4" style="position: relative;">
          <label for="email" class="mb-1">Email*</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="{{ email }}" required>
            <div class="invalid-feedback" style="position: absolute; top: -3px; left: 55px">
              必填欄位
            </div>
        </div>
        <div class="form-group mb-4" style="position: relative;">
          <label for="password" class="mb-1">Password*</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="{{ password }}" required>
            <div class="invalid-feedback" style="position: absolute; top: -3px; left: 85px">
              必填欄位
            </div>
        </div>
        <div class="form-group mb-5" style="position: relative;">
          <label for="confirmPassword" class="mb-1">Confirm Password*</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm Password" value="{{ confirmPassword }}" required>
            <div class="invalid-feedback" style="position: absolute; top: -3px; left: 150px">
              必填欄位
            </div>
        </div>
        <div class="row">
          <button type="submit" class="btn btn-primary m-auto" style="width: 94%">Register</button>
        </div>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/users/login" class="text-decoration-none">Login</a>
      </p>
    </div>
  </div>
</div>