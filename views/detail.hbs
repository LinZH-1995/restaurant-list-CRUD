<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <div class="text-decoration-none">
        <a href="/">
          <i class="fas fa-arrow-left" style="font-size: 1.3rem;margin: 0 0 4rem 10rem;"></i>
        </a>
      </div>

      <div class="d-flex flex-column">

        <div class="mb-4 d-flex justify-content-center col-12">
          <a href="/restaurants/{{restaurant.id}}/edit" class="text-decoration-none" style="margin-right: 3rem;">
            <i class="fas fa-edit text-primary"></i>
          </a>
          <a href="#" class="text-decoration-none" data-bs-toggle="modal"
            data-bs-target="#deleteModal{{restaurant.id}}">
            <i class="fas fa-trash-alt text-danger"></i>
          </a>
        </div>

        <div class="d-flex">

          <div class="d-flex flex-column align-items-center mb-5" style="flex-basis: 2%; margin-left: 10.2rem;">
            <span class="mb-2 mt-3"><i class="fas fa-utensils text-secondary"></i></span>
            <span class="mb-2"><i class="fas fa-map-marker-alt text-secondary"></i></span>
            <span class="mb-2"><i class="fas fa-mobile-alt text-secondary"></i></span>
            <span class="mb-2"><i class="fas fa-comment text-secondary" style="font-size: 13px;"></i></span>
          </div>

          <div class="d-flex flex-column align-items-center mb-5" style="flex-basis: 5%;">
            <span class="text-secondary mb-2 mt-3">類別：</span>
            <span class="text-secondary mb-2">地址：</span>
            <span class="text-secondary mb-2">電話：</span>
            <span class="text-secondary mb-2">介紹：</span>
          </div>

          <div class="d-flex flex-column mb-5" style="flex-basis: 70%;">
            <span class="text-secondary mb-2 mt-3">{{restaurant.category}}</span>
            <span class="text-secondary mb-2">{{restaurant.location}}
              <a href="{{restaurant.google_map}}" class="text-secondary ms-2" target="_blank">
                <i class="fas fa-map-marked-alt"></i>
              </a>
            </span>
            <span class="text-secondary mb-2">{{restaurant.phone}}</span>
            <span class="text-secondary mb-2">{{restaurant.description}}</span>
          </div>

        </div>
      </div>



      <img class="rounded mx-auto d-block w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px; margin-bottom: 10rem;">
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal{{restaurant.id}}" tabindex="-1" aria-labelledby="deleteModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center px-3 py-5 fs-4 fw-bold">
        Confirm whether to delete 『{{restaurant.name}}』 ?
      </div>
      <div class="modal-footer">
        <small>make sure you want to delete ! this can't be undo !</small>
        <form action="/restaurant/{{restaurant.id}}/delete" method="POST">
          <button type="submit" name="deletebtn" value="yes" class="btn btn-primary ms-5">Yes</button>
        </form>
        <button type="button" name="deletebtn" value="no" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>