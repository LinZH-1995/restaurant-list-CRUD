<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <div class="d-flex flex-column align-items-center">
        <div class="mb-4 d-flex">
          <a href="/restaurants/{{restaurant.id}}/edit" class="text-decoration-none" style="margin-right: 3rem;">
            <i class="fas fa-edit text-primary"></i>
          </a>
          <a href="#" class="text-decoration-none" data-bs-toggle="modal"
            data-bs-target="#deleteModal{{restaurant.id}}">
            <i class="fas fa-trash-alt text-danger"></i>
          </a>
        </div>

        <div class="d-flex justify-content-center">

          <div class="d-flex flex-column align-items-center me-1 mb-5">
            <span class="mb-2"><i class="fas fa-utensils text-secondary me-2"></i></span>
            <span class="mb-2"><i class="fas fa-map-marker-alt text-secondary me-2"></i></span>
            <span class="mb-2"><i class="fas fa-mobile-alt text-secondary me-2"></i></span>
            <span class="mb-2"><i class="fas fa-comment text-secondary me-2" style="font-size: 13px;"></i></span>
          </div>

          <div class="d-flex flex-column align-items-center me-1 mb-5">
            <span class="text-secondary mb-2">類別：</span>
            <span class="text-secondary mb-2">地址：</span>
            <span class="text-secondary mb-2">電話：</span>
            <span class="text-secondary mb-2">介紹：</span>
          </div>

          <div class="d-flex flex-column mb-5">
            <span class="text-secondary mb-2">{{restaurant.category}}</span>
            <span class="text-secondary mb-2">
              {{restaurant.location}}
              <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
                <i class="fas fa-location-arrow fa-xs me-2"></i>
              </a>
            </span>
            <span class="text-secondary mb-2">{{restaurant.phone}}</span>
            <span class="text-secondary mb-2">{{restaurant.description}}</span>
          </div>

        </div>
      </div>



      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal{{restaurant.id}}" tabindex="-1" aria-labelledby="deleteModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center px-3 py-5 fs-4 fw-bold">
        Confirm whether to delete 『{{restaurant.name}}』 ?
      </div>
      <div class="modal-footer">
        <small>make sure you want to delete ! this can't be undo !</small>
        <form action="/restaurant/{{restaurant.id}}/delete" method="POST">
          <button type="submit" name="deletebtn" value="yes" class="btn btn-primary ms-5">Yes</button>
        </form>
        <button type="button" name="deletebtn" value="no" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>