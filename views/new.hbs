<div class="container">
  <a href="/">
    <i class="fas fa-arrow-left" style="font-size: 1.3rem;margin: 2rem 0;"></i>
  </a>

  <div class="form-wrapper w-75 m-auto mt-5">
    <form id="form" action="/restaurants" method="POST" novalidate>

      <div class="form-group row mb-4">
        <label for="id" class="col-sm-2 col-form-label">No. {{ID}}</label>
        <div class="col-sm-8">
          <input type="hidden" class="form-control" name="id" id="id" value="{{ID}}" required>
        </div>
      </div>

      <div class="form d-flex mb-5">
        <div class="d-flex flex-column" style="margin-right: 1.5rem;">
          <label for="name" class="col-auto col-form-label form-title">Name：</label>
          <label for="category" class="col-auto col-form-label form-title">Category：</label>
          <label for="image" class="col-auto col-form-label form-title">Image：</label>
          <label for="location" class="col-auto col-form-label form-title">Location：</label>
          <label for="phone" class="col-auto col-form-label form-title">Phone：</label>
          <label for="google_map" class="col-auto col-form-label form-title">Google Map：</label>
          <label for="rating" class="col-auto col-form-label form-title">Rating：</label>
          <label for="description" class="col-auto col-form-label form-title">Description：</label>
        </div>

        <div class="d-flex flex-column" style="width: 500px;">
          <div class="form-input-area">
            <input type="text" class="form-control" name="name" id="name" placeholder="艾朋牛排餐酒館 ..." required>
          </div>

          <div class="form-input-area">
            <select class="form-select" name="category" id="category">
              <option value="">--請選擇一種餐廳類別--</option>
              <option>英式下午茶</option>
              <option>路邊攤小吃</option>
              <option>義式料理</option>
              <option>法式料理</option>
              <option>美式料理</option>
              <option>日式料理</option>
              <option>中式料理</option>
              <option>越式料理</option>
              <option>泰式料理</option>
              <option>韓式料理</option>
              <option>港式料理</option>
              <option>印度小吃</option>
              <option>速食店</option>
              <option>烘焙館</option>
              <option>咖啡廳</option>
              <option>素食</option>
              <option>酒吧</option>
              <option>夜市</option>
              <option>其他</option>
            </select>
          </div>

          <div class="form-input-area">
            <input type="url" class="form-control" name="image" id="image" placeholder="https://example.com" required>
          </div>

          <div class="form-input-area">
            <input type="text" class="form-control" name="location" id="location" placeholder="台北市信義區忠孝東路 1 號" required>
          </div>

          <div class="form-input-area">
            <input type="tel" class="form-control" name="phone" id="phone" placeholder="0912345678 / 02-1234567"
              required>
          </div>

          <div class="form-input-area">
            <input type="url" class="form-control" name="google_map" id="google_map"
              placeholder="https://goo.gl/maps/123456" required>
          </div>

          <div class="form-input-area">
            <input type="number" class="form-control" name="rating" id="rating" min="0" max="5" step="0.1" value="0" required>
          </div>

          <div class="form-input-area">
            <textarea type="text" class="form-control" name="description" id="description" placeholder="從味蕾開始，重拾美味感動。..." rows="5" cols="33" required>Good！</textarea>
          </div>
        </div>
      </div>

      <div class="col-12">
        <button id="submitButton" class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>