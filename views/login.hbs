<div class="row mt-5 mb-5">
  <div class="col-md-3 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3 mb-4">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group mb-2">
          <label for="email" class="mb-1">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email }}">
        </div>
        <div class="form-group mb-4">
          <label for="password" class="mb-1">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <div class="row mb-3">
          <button type="submit" class="btn btn-success m-auto" style="width: 94%">Login</button>
        </div>
        <div class="row mb-3">
          <a href="/auth/facebook" class="btn btn-primary m-auto" style="width: 94%">Login by Facebook</a>
        </div>
        <div class="row mb-3">
          <a href="/auth/google" class="btn btn-dark m-auto" style="width: 94%">Login by Google</a>
        </div>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register" class="text-decoration-none">Register</a>
      </p>
    </div>
  </div>
</div>